<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".adapter.HistoryAdapter">

    <TextView
        android:id="@+id/imcTv"
        android:text="IMC"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/categoriaTv"
        android:text="Categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imcTv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/gastoTv"
        android:text="Gasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/categoriaTv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/pesoIdealTv"
        android:text="Peso ideal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gastoTv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/aguaTv"
        android:text="Ãgua/dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pesoIdealTv"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
